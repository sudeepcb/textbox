@model TextBox.MVCClient.ViewModels.BookPageVM
@{
  Layout = "../Shared/_Layout.cshtml"; 
}
@{
    ViewData["Title"] = "Home Page";
}
<div class = ".fixed-left">
@{Html.Partial("../Shared/_LibraryFilterPartial", @Model);}
</div>
<br>
<div class="container">
<form action="name of action" id ="filterbooks">
<select name="filtertype" form="filterbooks">
  <option value=1>A-Z</option>
  <option value=2>Z-A</option>
</select>
<input type="hidden" name="certainbook" value=@Model.certainBooks>
<input type="submit" value="Filter">
</form>
<div class="row">
 @foreach (var item in Model.certainBooks)
  {
<div class="col-sm">
<p>item.Title</p>
<div>
  by: @foreach (var item2 in item.BookAuthors)
  {
    <p>item2.FirstName item2.LastName</p>
  }
</div>
</div>
  }
</div>
</div>
